{
  "name": "dofuslab",
  "version": "1.0.0",
  "description": "An equipment experiment tool for the MMORPG Dofus",
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' && yarn && yarn codegen && next dev --turbopack",
    "dev-webpack": "NODE_OPTIONS='--inspect' && yarn && yarn codegen && next dev",
    "dev-docker": "NODE_OPTIONS='--inspect=0.0.0.0:9229' yarn codegen && next dev --turbopack",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "next start",
    "type-check": "tsc",
    "generate": "graphql-codegen",
    "codegen": "yarn generate",
    "publish-heroku": "cd ../ && git subtree push --prefix client heroku-client master || true",
    "deploy-production": "pm2 deploy ecosystem.config.js production --force",
    "reload-production": "pm2 deploy ecosystem.config.js production exec 'pm2 reload app'",
    "sync-i18n": "ts-node --project tsconfig.server.json sync-locales",
    "scan-i18n": "npx i18next-scanner"
  },
  "dependencies": {
    "@ant-design/dark-theme": "^2.0.2",
    "@ant-design/icons": "^6.0.1",
    "@apollo/client": "3.2",
    "@artsy/fresnel": "^8.1.0",
    "@emotion/react": "^11.7.1",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-brands-svg-icons": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "0",
    "@graphql-codegen/cli": "^6.0.0",
    "@next/bundle-analyzer": "15.5.2",
    "@react-hook/debounce": "^3.0.0",
    "antd": "^5.27.1",
    "babel-plugin-import": "^1.13.0",
    "classnames": "2.5.1",
    "dotenv": "^8.2.0",
    "emotion-theming": "^10.0.27",
    "eslint-config-next": "15.5.2",
    "express": "^4.17.1",
    "graphql": "15.8",
    "i18next": "^25.5.2",
    "js-cookie": "^3.0.1",
    "lockr": "^0.8.5",
    "lodash": "^4.17.19",
    "next": "15.5.2",
    "next-i18next": "^15.4.2",
    "next-with-apollo": "^5.0.1",
    "null-loader": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^11.15.3",
    "react-infinite-scroller": "^1.2.4",
    "react-no-ssr": "^1.1.0",
    "webpack": "^5.67.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "@parcel/watcher": "^2.5.1",
    "@types/express": "^4.17.6",
    "@types/gtag.js": "^0.0.3",
    "@types/js-cookie": "^3.0.1",
    "@types/lockr": "^0.8.6",
    "@types/lodash": "^4.14.155",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-no-ssr": "^1.1.1",
    "chalk": "^4.1.0",
    "graphql-codegen-apollo-next-ssr": "^1.7.4",
    "i18next-scanner": "^2.11.0",
    "nodemon": "^2.0.4",
    "sort-keys": "^4.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.tsx": [
      "npx prettier --write",
      "eslint --fix-dry-run"
    ],
    "*.ts": [
      "npx prettier --write",
      "eslint --fix-dry-run"
    ]
  },
  "resolutions": {
    "@babel/runtime": "^7.24.6",
    "@types/react": "19.1.12"
  }
}
